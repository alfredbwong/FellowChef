<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <ScrollView
        android:id="@+id/scrollViewDashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:paddingBottom="@dimen/margin_bottom_fragment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/chefRankButton"
                android:layout_width="409dp"
                android:layout_height="@dimen/dashboard_item_mobile_img_height"
                android:layout_margin="@dimen/margin_default"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/original_recipe_book"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/exploreRecipesButton"
                android:layout_width="409dp"
                android:layout_height="@dimen/dashboard_item_mobile_img_height"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/explore"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/chefRankButton"
                app:layout_constraintTop_toBottomOf="@+id/chefRankButton" />

            <ImageButton
                android:id="@+id/createRecipeButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/dashboard_item_mobile_img_height"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/create"
                app:layout_constraintEnd_toEndOf="@+id/exploreRecipesButton"
                app:layout_constraintStart_toStartOf="@+id/exploreRecipesButton"
                app:layout_constraintTop_toBottomOf="@+id/exploreRecipesButton" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/text_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.244" />

</androidx.constraintlayout.widget.ConstraintLayout>